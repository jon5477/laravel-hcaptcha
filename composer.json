{
    "name": "jon5477/laravel-hcaptcha",
    "description": "hCaptcha package for Laravel framework",
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "jon5477\\hCaptcha\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jon Huang",
            "email": "jon5477@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "illuminate/support": "^9.0|^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2",
        "orchestra/testbench": "^7.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "jon5477\\hCaptcha\\Providers\\HCaptchaServiceProvider"
            ],
            "aliases": {
                "HCaptcha": "jon5477\\hCaptcha\\Facades\\HCaptcha"
            }
        }
    }
}
